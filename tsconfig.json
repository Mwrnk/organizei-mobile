{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@fonts/*": ["assets/fonts/*"],
      "@styles/*": ["src/styles/*"],
      "@screens/*": ["src/screens/*"]
    }
  }
}
